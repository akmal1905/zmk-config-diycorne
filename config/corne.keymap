#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>

#define alpha     0
#define func1     1
#define func2     2
#define btfunc    3

/ {
    behaviors {
        tap_hold: tap_hold {
            compatible = "zmk,behavior-hold-tap";
            label = "TAP_HOLD";
            bindings = <&kp>, <&kp>;

            #binding-cells = <2>;
            tapping-term-ms = <190>;
            flavor = "balanced";
        };
    };

    keymap {
        compatible = "zmk,keymap";

        alpha {
            bindings = <
&kp TAB                       &kp Q     &kp W  &kp E     &kp R      &kp T       &kp Y      &kp U      &kp I      &kp O    &kp P     &kp ESC
&tap_hold LS(LSHFT) CAPSLOCK  &kp A     &kp S  &kp D     &kp F      &kp G       &kp H      &kp J      &kp K      &kp L    &kp SEMI  &kp ENTER
&kp RCTRL                     &kp Z     &kp X  &kp C     &kp V      &kp B       &kp N      &kp M      &kp COMMA  &kp DOT  &kp FSLH  &kp SQT
                                               &kp LWIN  &kp BSPC   &mo func2   &mo func1  &kp SPACE    &kp RALT
            >;
        };

        func1 {
            bindings = <
&kp TAB     &kp N1   &kp N2   &kp N3     &kp N4  &kp N5      &kp N6     &kp N7    &kp N8    &kp N9    &kp N0     &kp DEL
&kp LSHFT   &none    &none    &none      &none   &none       &none      &none     &none     &kp UP    &none      &kp ENTER
&kp RCTRL   &none    &none    &none      &none   &none       &none      &none     &kp LEFT  &kp DOWN  &kp RIGHT  &none
                              &none      &trans  &kp BSPC    &kp SPACE  &trans    &none
            >;
        };

        func2 {
            bindings = <
&kp TAB    &none     &kp UP    &none      &none   &none       &kp CARET  &kp AMPS   &kp ASTRK  &kp LPAR  &kp RPAR  &kp ESC
&kp LSHFT  &kp LEFT  &kp DOWN  &kp RIGHT  &none   &none       &kp MINUS  &kp EQUAL  &kp LBKT   &kp RBKT  &kp BSLH  &kp GRAVE
&kp RCTRL  &none     &none     &none      &none   &none       &kp UNDER  &kp PLUS   &kp LBRC   &kp RBRC  &kp PIPE  &kp TILDE
                               &none      &trans  &kp BSPC    &kp SPACE  &trans     &mo btfunc
            >;
        };

        btfunc {
            bindings = <
&kp TAB    &none     &kp UP    &none      &none   &none       &none   &none   &none   &none  &none   &none
&kp LSHFT  &kp LEFT  &kp DOWN  &kp RIGHT  &none   &none       &bt BT_CLR &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4
&kp RCTRL  &none     &none     &none      &none   &none       &none   &none   &none   &none  &none   &none
                               &none      &trans  &none       &none   &trans  &trans
            >;
        };
    };
};
